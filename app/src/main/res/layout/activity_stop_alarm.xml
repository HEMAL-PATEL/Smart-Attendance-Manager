<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarm_activity_background"
    tools:context=".Activities.StopAlarmActivity">

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/time_text_margin_top"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display4"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/stop_alarm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_view"
        android:layout_marginLeft="@dimen/stop_alarm_button_margin_side"
        android:layout_marginTop="@dimen/alarm_button_margin_top"
        android:layout_marginRight="@dimen/stop_alarm_button_margin_side"
        android:background="@drawable/round_button"
        android:padding="@dimen/button_padding"
        android:text="@string/stop_alarm"
        android:textColor="@color/button_text_color" />

</RelativeLayout>